    <SolidColorBrush x:Key="SecondaryBackground" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="PrimaryText" Color="#202020"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#505050"/>
    <SolidColorBrush x:Key="TertiaryText" Color="#909090"/>
    <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="PressedBackground" Color="#D8D8D8"/>
